{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ES2022",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "esModuleInterop": true,
    "outDir": "helpers",
    "sourceMap": false,
    "newLine": "lf",
    "noEmitOnError": true,
    "pretty": true,
    "removeComments": false,
    "rootDir": "helpers-src",
    "emitDecoratorMetadata": false
  },
  "include": ["helpers-src/**/*.ts"]
}
